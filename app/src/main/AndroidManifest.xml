<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.uniroma3.android.gpstracklogger" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GPSMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.GPSLoggingService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="it.uniroma3.android.gpstracklogger.service.GPSLoggingService" />
            </intent-filter>
        </service>

        <activity
            android:name=".StartDrawActivity"
            android:label="@string/title_activity_start_draw"
            android:parentActivityName=".GPSMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniroma3.android.gpstracklogger.GPSMainActivity" />
        </activity>
        <activity
            android:name=".LoadFileActivity"
            android:label="@string/title_activity_load_file" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniroma3.android.gpstracklogger.GPSMainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniroma3.android.gpstracklogger.GPSMainActivity" />
        </activity>
        <activity
            android:name=".LocDetailsActivity"
            android:label="@string/title_activity_loc_details"
            android:parentActivityName=".GPSMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniroma3.android.gpstracklogger.GPSMainActivity" />
        </activity>
        <activity
            android:name=".ImportedFileActivity"
            android:label="@string/title_activity_imported_file"
            android:parentActivityName=".GPSMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniroma3.android.gpstracklogger.GPSMainActivity" />
        </activity>
        <activity
            android:name=".GraphActivity"
            android:label="@string/title_activity_graph"
            android:parentActivityName=".ImportedFileActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.uniroma3.android.gpstracklogger.ImportedFileActivity" />
        </activity>
    </application>

</manifest>
